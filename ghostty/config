keybind = ctrl+k>shift+h=previous_tab
keybind = ctrl+k>1=goto_tab:1
keybind = ctrl+k>2=goto_tab:2
keybind = ctrl+k>3=goto_tab:3
keybind = ctrl+k>4=goto_tab:4

# split

keybind = ctrl+k>-=new_split:down

keybind = ctrl+k>j=goto_split:bottom
keybind = ctrl+k>k=goto_split:top
keybind = ctrl+k>h=goto_split:left
keybind = ctrl+k>l=goto_split:right

keybind = ctrl+k>z=toggle_split_zoom
keybind = ctrl+k>e=equalize_splits

